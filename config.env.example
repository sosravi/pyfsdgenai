# PyFSD GenAI Configuration

# Application Settings
APP_NAME=PyFSD GenAI
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pyfsdgenai
MONGODB_URL=mongodb://localhost:27017/pyfsdgenai
REDIS_URL=redis://localhost:6379/0

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview

# Document Processing
MAX_FILE_SIZE_MB=100
SUPPORTED_FORMATS=pdf,docx,txt,html,xml
OCR_ENABLED=true
OCR_LANGUAGE=eng

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=PyFSD GenAI
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Agent Configuration
MAX_CONCURRENT_AGENTS=20
AGENT_TIMEOUT_SECONDS=300
AGENT_RETRY_ATTEMPTS=3

# Performance
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# File Storage
STORAGE_PROVIDER=local
AWS_S3_BUCKET=pyfsdgenai-storage
AZURE_STORAGE_CONTAINER=pyfsdgenai
GCP_STORAGE_BUCKET=pyfsdgenai-storage

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@pyfsdgenai.com
